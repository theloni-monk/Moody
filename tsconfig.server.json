{
  "compilerOptions": {
    "target": "ES2020",
    "sourceMap": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "./build"
  },
  "include": [
    "src/server"
  ],
  "exclude": [
    "src/client"
  ]
}
